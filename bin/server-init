#!/bin/sh

CURDIR=$(dirname $0)

if [ ! -f "${CURDIR}/common.sh" ]; then
  echo "Can't find the common script."
  exit 1
fi

. "${CURDIR}/common.sh"

if [ -z "$1" ]; then
    echo "Please provide the server short name"
    exit 1
fi
host=$1; shift

echo ""
echo "==> WARNING: the server will be rebooted if the hyper-v tools need to be installed"
echo ""

runplay "server-init" $host $*