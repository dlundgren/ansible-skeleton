#!/bin/sh

CURDIR=$(dirname $0)

if [ ! -f "${CURDIR}/common.sh" ]; then
  echo "Can't find the common script."
  exit 1
fi

. "${CURDIR}/common.sh"

if [ -z "$1" ]; then
    echo "Please provide task to run"
    exit 1
fi
task=$1
shift


if [ -z "$1" ]; then
    echo "Please provide the server short name"
    exit 1
fi


runplay "tasks/$task" $*